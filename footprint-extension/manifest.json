{
    "manifest_version": 3,
    "name": "Digital Footprint Tracker",
    "version": "2.0",
    "description": "Advanced digital footprint tracking with content analysis, emotional balance monitoring, and personalized insights",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "action": {
        "default_popup": "popup/index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },

    "options_ui": {
        "page": "options/index.html",
        "open_in_tab": true
    },

  "background": {
    "service_worker": "background/background-standalone.js"
  },    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content/contentScript.js"],
            "run_at": "document_idle"
        }
    ],

    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting",
        "background",
        "idle",
        "alarms"
    ],

    "host_permissions": [
        "<all_urls>"
    ]
}
